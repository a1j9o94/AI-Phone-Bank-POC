{
    "name": "Python: Flask with Poetry (Debug)",
    "type": "python",
    "request": "launch",
    "module": "flask",
    "env": {
        "FLASK_APP": "main.py",
        "FLASK_ENV": "development",
        "PYTHONPATH": "${workspaceFolder}",
        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
    },
    "args": [
        "run",
        "--no-debugger",
        "--no-reload"
    ],
    "jinja": true,
    "justMyCode": true,
    "program": "${workspaceFolder}/main.py",
    "python": "${workspaceFolder}/.venv/bin/python"
}